{
  "extends": "./tsconfig.json",   // Inherit settings from the base tsconfig.json
  "compilerOptions": {
    "sourceMap": false,       // Disable source maps in production
    "removeComments": true,    // Remove comments from compiled code
  },
  "exclude": [
    "**/*.spec.ts",     // Exclude test files from production build
    "**/*.test.ts",
    "dist/*",
  ]
}