{
  "functions": {
    "source": ".",
    "runtime": "nodejs18",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "codebase": "default"
  },
  "emulators": {
    "functions": {
      "source": "dist",
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": ""
    },
    "singleProjectMode": true,
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    }
  }
}